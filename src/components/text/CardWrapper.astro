---
import { twMerge } from 'tailwind-merge'
import ProseSection from './ProseSection.astro'

type Props = {
  classes?: string | undefined
  sectionClasses?: string | undefined
  headline?: string
}

const { classes, sectionClasses, headline } = Astro.props
---

<ProseSection classes={sectionClasses}>
  {headline ? <h2>{headline}</h2> : ''}
  <div class={twMerge('mb-3 grid gap-4 sm:grid-cols-2', classes)}>
    <slot />
  </div>
</ProseSection>
