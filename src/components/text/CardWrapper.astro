---
import { twMerge } from 'tailwind-merge'
import ProseSection from './ProseSection.astro'

type Props = {
  classes?: string | undefined
  sectionClasses?: string | undefined
  headline?: string
}

const { classes, sectionClasses, headline } = Astro.props
---

<ProseSection classes={twMerge('mb-0 mt-0', sectionClasses)}>
  {headline ? <h2 class="!mt-0">{headline}</h2> : ''}
  <div class={twMerge('grid gap-4 sm:grid-cols-2', classes)}>
    <slot />
  </div>
</ProseSection>
