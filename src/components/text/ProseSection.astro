---
import { twMerge } from 'tailwind-merge'
import Link from 'astro-heroicons/solid/Link.astro'

type Props = {
  id?: string | undefined
  highlight?: boolean | undefined
  classes?: string | undefined
}

const { id, highlight, classes } = Astro.props
---

<section
  id={id}
  class={twMerge(
    'group relative mb-20 rounded p-4 leading-normal',
    'prose prose-lg prose-blue max-w-prose',
    'prose-headings:mb-5 prose-headings:text-sky-700 prose-headings:first:mt-0',
    'prose-p:m-0',
    highlight ? 'bg-emerald-100' : '',
    id ? 'target:bg-purple-100' : '',
    classes,
  )}
>
  <slot />
  {
    id && (
      <a
        href={`#${id}`}
        title="Link zu diesem Absatz"
        class="opacity-0 transition-opacity hover:text-blue-950 group-hover:opacity-70"
      >
        <Link class="absolute right-1 top-1 size-4" />
      </a>
    )
  }
</section>
